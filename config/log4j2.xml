<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="120" status="TRACE">
    <Properties>
        <Property name="baseDir">logs</Property>
        <Property name="baseDirError">logs/errorlog</Property>
        <Property name="delete_lastmodified">P2D</Property>
        <Property name="rollover_size">250 MB</Property>
        <Property name="rollover_size_error">250 MB</Property>
    </Properties>
    
    <CustomLevels>
        <CustomLevel name="DIAG" intLevel="350"/>
        <CustomLevel name="NOTICE" intLevel="450"/>
        <CustomLevel name="VERBOSE" intLevel="550"/>
    </CustomLevels>
    
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} %highlight{%-5p [%t] %C{1}.%M:%L : }{ERROR=red, FATAL=Bright red blink,
                    WARN=yellow, DIAG=Bright cyan, INFO=cyan, NOTICE=Bright green, DEBUG=green, VERBOSE=Bright blue,
                    TRACE=blue}%msg%n%throwable
                </Pattern>
            </PatternLayout>
        </Console>
        <RollingFile name="ALL_LEVELS" fileName="${baseDir}/smcloud.log"
                     filePattern="${baseDir}/smcloud_%d{dd_MM_yyyy}_%i.log">
            <LevelRangeFilter minLevel="ERROR" maxLevel="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight{%-5p [%t] %C{1}.%M:%L : }{ERROR=red, FATAL=Bright red
                    blink, WARN=yellow, DIAG=Bright cyan, INFO=cyan, NOTICE=Bright green, DEBUG=green, VERBOSE=Bright
                    blue, TRACE=blue}%msg%n%throwable
                </Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${rollover_size}"/>
            </Policies>
            <DefaultRolloverStrategy  max="10" fileIndex="nomax">
                <Delete basePath="${baseDir}" maxDepth="1">
                    <IfFileName glob="smcloud_*.log*" />
                    <IfLastModified age="${delete_lastmodified}" >
                    </IfLastModified>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        <RollingFile name="ERROR_LOG" fileName="${baseDirError}/error.log"
                     filePattern="${baseDirError}/smcloud-error_%d{dd-MM-yyyy}_%i.log">
            <LevelRangeFilter minLevel="FATAL" maxLevel="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight{%-5level [%t] %C{1}.%M:%L -}{ERROR=red, FATAL=red blink, WARN=yellow} %msg%n%throwable</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${rollover_size_error}"/>
            </Policies>
            <DefaultRolloverStrategy max="10" fileIndex="nomax">
                <Delete basePath="${baseDirError}" maxDepth="1">
                    <IfFileName glob="smcloud-error_*.log" />
                    <IfLastModified age="${delete_lastmodified}" >
                    </IfLastModified>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile name="OUT" fileName="${baseDir}/unregister.log"
                     filePattern="${baseDir}/unregister_%d{dd_MM_yyyy}_%i.log">
            <LevelRangeFilter minLevel="WARN" maxLevel="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %highlight{%-5p [%t] %C{1}.%M:%L : }{ERROR=red, FATAL=Bright red
                    blink, WARN=yellow, DIAG=Bright cyan, INFO=cyan, NOTICE=Bright green, DEBUG=green, VERBOSE=Bright
                    blue, TRACE=blue}%msg%n%throwable
                </Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${rollover_size}"/>
            </Policies>
            <DefaultRolloverStrategy  max="10" fileIndex="nomax">
                <Delete basePath="${baseDir}" maxDepth="1">
                    <IfFileName glob="unregister_*.log*" />
                    <IfLastModified age="${delete_lastmodified}" >
                    </IfLastModified>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <AsyncLogger name="com.avis.utility" level="WARN" additivity="false" includeLocation="true">
            <AppenderRef ref="OUT"/>

        </AsyncLogger>
        <AsyncLogger name="com.avis" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.bean" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.controller" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.model" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.repository" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.security" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.service" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.util" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        <AsyncLogger name="com.avis.web.request.handler" level="TRACE" additivity="false" includeLocation="true">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </AsyncLogger>
        
        <Root level="INFO" additivity="false">
            <AppenderRef ref="ALL_LEVELS"/>
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="ERROR_LOG"/>
        </Root>
    </Loggers>
</Configuration>
